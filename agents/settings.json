{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat \"$CLAUDE_PROJECT_DIR/AGENTS.md\" 2>/dev/null || cat \"$CLAUDE_PROJECT_DIR/CLAUDE.md\" 2>/dev/null || echo 'No AGENTS.md or CLAUDE.md found'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__penpot__.*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/scripts/ensure-penpot.sh\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true
  }
}
